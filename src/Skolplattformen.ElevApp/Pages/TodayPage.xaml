<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skolplattformen.ElevApp.Pages.TodayPage"
             Title="{Binding Title}">

  <ScrollView>
        <VerticalStackLayout Margin="6,6,6,6">
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Button
                    Text="«"
                    Command="{Binding PreviousCommand}"
                    HorizontalOptions="Start" />
                <Label FontSize="32" HorizontalOptions="CenterAndExpand" Margin="0,6,0,0">
                    <Label.Text>
                        <MultiBinding StringFormat="{}{0}-{1}">
                            <Binding Path="SchoolStartTime"></Binding>
                            <Binding Path="SchoolEndTime"></Binding>
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Button
                    Text="»"
                    Command="{Binding NextCommand}"
                    HorizontalOptions="End" />
            </StackLayout>
           
            <Label 
            Text="Glöm inte gympapåsen"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            IsVisible="{Binding IsSportsbagDay}"/>

            <CollectionView  Margin="0,10,0,10"
                             ItemsSource="{Binding Items}"                             
                             SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="4" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="6,6" BackgroundColor="{Binding Color}">
                        <VerticalStackLayout Padding="1,0" Margin="0,0,0,0">
                            <Label FontSize="12" >
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0}-{1}">
                                        <Binding Path="StartTime" />
                                        <Binding Path="EndTime" />
                                    </MultiBinding>
                                </Label.Text>
                            </Label>
                            <Label Text="{Binding Title}" FontSize="24"/>
                            <Label Text="{Binding Description}"  FontSize="14"/>
                        </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
  </ScrollView>
</ContentPage>